# Yes, I used figlet.  I don't give a fuck.

# Turn off sleep.
sudo pmset -a standbydelay 0

# Increase process limit (good if you have a shit ton of cores)

if [ ! -f /Library/LaunchDaemons/limit.maxproc.plist ]; then
echo '<?xml version="1.0" encoding="UTF-8"?>                    \
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"            \
        "http://www.apple.com/DTDs/PropertyList-1.0.dtd">       \
<plist version="1.0">                                           \
  <dict>                                                        \
    <key>Label</key>                                            \
    <string>limit.maxproc</string>                              \
    <key>ProgramArguments</key>                                 \
    <array>                                                     \
      <string>launchctl</string>                                \
      <string>limit</string>                                    \
      <string>maxproc</string>                                  \
      <string>2560</string>                                     \
      <string>2560</string>                                     \
    </array>                                                    \
    <key>RunAtLoad</key>                                        \
    <true/>                                                     \
    <key>ServiceIPC</key>                                       \
    <false/>                                                    \
  </dict>                                                       \
</plist>' > /Library/LaunchDaemons/limit.maxproc.plist
fi

